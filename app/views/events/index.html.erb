<h1>Upcoming Events!</h1>
<p><%= link_to "New Event", new_event_path%></p>
<% @upcoming_events.each do |event| %>
    <h2><%= event.name %></h2>
    <p><%= event.event_date %></p>
    <p><%= event.location %></p>
    <%= link_to "View Event", event %>
    <hr>
<% end %>
<h1>Past Events!</h1>
<% @past_events.each do |event| %>
    <h2><%= event.name %></h2>
    <p><%= event.event_date %></p>
    <p><%= event.location %></p>
    <%= link_to "View Event", event %>
    <hr>
<% end %>

